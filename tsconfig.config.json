{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.config.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": [
      "node"
    ],
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "env.d.ts",
    "vite.config.*",
    "vitest.config.*",
    "uno.config.*",
    "vitest.workspace.*",
    "playwright.config.*",
    "eslint.config.*",
    "build.config.*"
  ]
}
