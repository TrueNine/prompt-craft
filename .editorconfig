# EditorConfig is awesome: https://EditorConfig.org
root = true
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{ini,toml}]
indent_size = 4

[*.{sh,bash}]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf
